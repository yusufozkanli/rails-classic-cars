<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 50%), url('https://media.wired.com/photos/59266cf87034dc5f91beb600/master/w_2400,c_limit/1954-Mercedes-Benz-300-SL-Gullwing_Darin-Schnabel-c-2016-Courtesy-RM-Sothebys.jpg');">
        <div class="banner-content text-center">
          <h1>Vavavoom.</h1>
          <h2>Best classic cars for hire</h2>
            <div class="search-button">
            <%= form_tag(cars_search_path, method: :get, id: "demo-2") do %>
              <%= search_field_tag :query %>
              <%# submit_tag 'Search' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="item">
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 50%), url('https://theprivelege.com/wp-content/uploads/2015/10/calspyder-renucci-az-BIG.jpg');">
        <div class="banner-content text-center">
          <h1>Vavavoom.</h1>
          <h2>Best classic cars for hire</h2>
            <div class="search-button">
            <%= form_tag(cars_search_path, method: :get, id: "demo-2") do %>
              <%= search_field_tag :query %>
              <%# submit_tag 'Search' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="item">
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.3) 50%), url('https://www.experiencedays.co.uk/images/Driving-Experience-in-Oxfordshire-Edited-28-of-32-1920x1080-resize.jpg');">
        <div class="banner-content text-center">
          <h1>Vavavoom.</h1>
          <h2>Best classic cars for hire</h2>
          <div class="search-button">
            <%= form_tag(cars_search_path, method: :get, id: "demo-2") do %>
              <%= search_field_tag :query %>
              <%# submit_tag 'Search' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
