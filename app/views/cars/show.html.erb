        <li> <strong> Year: </strong>  <%= @car.year %></li>
        <li> <strong> Color: </strong>  <%= @car.color %></li>
        <li> <strong> Â£ <%= @car.price %> /day </strong> </li>
      </ul>

      <div class="form-area">
          <h2>Book this car now.</h2>
          <%= simple_form_for [@car, @rental], :html=> { class: 'simpleform' } do |f| %>
